{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="accueil">
    <div class="header">
        <img src="{{ asset('/img/sodipharm.png') }}" alt="Sodipharm logo" class="logo">
         <a href="{{ path('descente') }}"><button class="add-button">+</button></a>
    </div>
    <div class="descente-container">
        {% for i in 1..8 %}
