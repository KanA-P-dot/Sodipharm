{% extends 'base.html.twig' %}

{% block title %}Etagere{% endblock %}

{% block body %}
<head>
    <style>
        body {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding: 20px;
        }
        #rectangle-preview {
            border: 1px solid #000;
            position: relative;
            width: 200px;
            height: 400px;
        }
        .single-etagere {
            background-color: #ccc;
            border-bottom: solid 1px #000;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            box-sizing: border-box;
            position: relative;
        }
        .product-list {
            display: flex;
            flex-direction: column;
            height: 200px;
            max-width: 800px;
            overflow-y: scroll;
            margin-left: 30px;
        }
        .product {
            cursor: pointer;
            background-color: #283593;
            color: white;
            place-self: end;
        }
    </style>
</head>
<div class="accueil">
    <div class="header">
        <a href="{{ path('home') }}"><img src="{{ asset('/img/sodipharm.png') }}" alt="Sodipharm logo" class="logo"></a>
    </div>
    <h1>Produits</h1>
    <button type="button" id="next-button">Enregistrer</button>
    <div class="form-container">
    <div id="rectangle-preview">
        <div id="etagere-container"></div>
    </div>
    <div class="product-list">
        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Produit</th>
                <th>Hauteur</th>
                <th>Largeur</th>
                <th>Longueur</th>
                <th>Poids</th>
            </tr>
        </thead>
        <tbody>
            {% for produit in Produits %}
                <tr class="product" draggable="true" id="product{{ produit.id }}" data-width="{{ produit.LONGPRODUIT / 10 }}" data-height="{{ produit.LARGPRODUIT / 10 }}">
                    <td>{{ produit.id }}</td>
                    <td class="Name">{{ produit.Produit }}</td>
                    <td>{{ produit.HAUTPRODUIT }}</td>
                    <td>{{ produit.LARGPRODUIT }}</td>
                    <td>{{ produit.LONGPRODUIT }}</td>
                    <td>{{ produit.PDSPRODUIT }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    


<script src="{{ asset('js/produits.js') }}"></script>
{% endblock %}
